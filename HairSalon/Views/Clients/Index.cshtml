@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="container">
  <h1>Clearwater Clients</h1>

  @if (@Model.Count == 0)
  {
    <h4>You haven't added any clients, yet</h4>
  }

    <ul>
    @foreach (Client client in Model)
    {
      <li><h5>@Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId})</h5></li>
        <ul class="addenda">
          <li><em>Stylist:</em> @client.Stylist.Name</li>
        </ul>
    }
    </ul>
  <div class="bottomNav">
    <p>@Html.ActionLink("— Add a Client —", "Create")</p>
  </div>
</div>