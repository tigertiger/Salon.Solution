@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="container">
  <h1>Clearwater Clients</h1>

  @if (@Model.Count == 0)
  {
    <h4>You haven't added any clients, yet</h4>
  }

  <ul>
  @foreach (Client client in Model)
  {
    <li>@Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId}) | @client.Stylist.Name</li>
  }
  </ul>

  <div class="bottomNav">
    <p>@Html.ActionLink("Add a Client", "Create")</p>
  </div>
</div>