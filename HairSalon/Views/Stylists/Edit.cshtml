@{
  Layout = "_Layout";
}
@using HairSalon.Models
@model HairSalon.Models.Stylist

<div class="container">
  <h1>Edit @Model.Name</h1>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StylistId)

    <span class="formLab">Stylist's Name&nbsp;</span>
    @Html.EditorFor(model => model.Name)
    <br /><br />
    <span class="formLab">Specialty&nbsp;</span>
    @Html.EditorFor(model => model.Specialty)
    <br /><br />
    <input type="submit" value="Update"/>
  }

  <div id="cliStyEdit">
    <h3>Edit Stylist's Clients</h3>
    <ul>
    @foreach(Client client in Model.Clients)
    {
      <li>
        @Html.ActionLink($"— Edit {client.ClientName}", "Edit", "Clients", new {id = client.ClientId}) <br/>
        @Html.ActionLink($"— Delete {client.ClientName}", "Delete", "Clients", new {id = client.ClientId})
      </li>
    }
    </ul>
  </div>
</div>