@{
  Layout = "_Layout";
}
@using HairSalon.Models
@model HairSalon.Models.Stylist

<div class="container">
  <h1>Edit @Model.Name</h1>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StylistId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.LabelFor(model => model.Specialty)
    @Html.EditorFor(model => model.Specialty)

    <input type="submit" value="Update"/>
  }

  <h3>Edit Stylist's Clients</h3>
  <ul>
  @foreach(Client client in Model.Clients)
  {
    <li>
      @Html.ActionLink($"{client.ClientName}", "Edit", "Clients", new {id = client.ClientId})
      <ul>
        <li>@Html.ActionLink($"Delete Client", "Delete", "Clients", new {id = client.ClientId})</li>
      </ul>
    </li>
  }
  </ul>
</div>