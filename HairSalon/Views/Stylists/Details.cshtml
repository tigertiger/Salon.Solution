@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist

<div class="container">
  <h1>@Model.Name</h1>
  <h3 id="spesh">@Model.Specialty</h3>
  <img src="/../../img/line.png" alt="white line">
  <div class="deets">
    <h4>Current Clients:</h4>
    <ul>
      @foreach(Client client in Model.Clients)
      {
        <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new {id = client.ClientId})</li>
      }
    </ul>
  </div>
  <img src="/../../img/line.png" alt="white line">
  <div class="bottomNav">
    <p>@Html.ActionLink("Add a Client", "Create", "Clients")</p>
    <p>@Html.ActionLink("Edit this Stylist", "Edit", new {id = Model.StylistId})</p>
    <p>@Html.ActionLink("Delete this Stylist", "Delete", new {id = Model.StylistId})</p>
  </div>
</div>